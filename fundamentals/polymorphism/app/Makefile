build:
	g++ -g ../*.cpp ../libs/*.cpp -std=c++2a -o main_app.out

run:
	./main_app.out

build_and_run:
	g++ -g ../*.cpp -std=c++2a -o main_app.out
	./main_app.out

run_x01:
	g++ -g ../x01*.cpp ../libs/*.cpp -std=c++2a -o main_app.out
	./main_app.out

run_x02:
	g++ -g ../x02*.cpp ../libs/*2.cpp -std=c++2a -o main_app.out
	./main_app.out

run_x03:
	g++ -g ../x03*.cpp ../libs/*2.cpp -std=c++2a -o main_app.out
	./main_app.out